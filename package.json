{
  "name": "jods",
  "version": "1.1.0",
  "description": "A minimal, reactive JSON state layer for Node.js and the browser",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "require": "./dist/react.cjs",
      "types": "./dist/react.d.ts"
    },
    "./preact": {
      "import": "./dist/preact.js",
      "require": "./dist/preact.cjs",
      "types": "./dist/preact.d.ts"
    },
    "./remix": {
      "import": "./dist/remix.js",
      "require": "./dist/remix.cjs",
      "types": "./dist/remix.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "prepublishOnly": "npm run build",
    "docs:dev": "cd docs && pnpm start",
    "docs:build": "cd docs && pnpm build",
    "docs:deploy": "cd docs && GIT_USER=clamstew pnpm deploy",
    "docs:screenshot": "cd docs && pnpm screenshot",
    "docs:screenshot:localhost": "cd docs && pnpm screenshot:localhost",
    "docs:screenshot:production": "cd docs && pnpm screenshot:production",
    "docs:screenshot:baseline": "cd docs && pnpm screenshot:baseline",
    "docs:screenshot:unified": "node docs/scripts/screenshot-unified.mjs",
    "docs:screenshot:unified:baseline": "node docs/scripts/screenshot-unified.mjs --baseline",
    "docs:screenshot:unified:localhost": "BASE_URL=http://localhost:3000 node docs/scripts/screenshot-unified.mjs",
    "docs:screenshot:unified:components": "node docs/scripts/screenshot-unified.mjs --mode=components",
    "docs:screenshot:unified:sections": "node docs/scripts/screenshot-unified.mjs --mode=sections",
    "docs:screenshot:unified:remix": "node docs/scripts/screenshot-unified.mjs --mode=remix",
    "docs:screenshot:react-tab": "node docs/scripts/screenshot-unified.mjs --components=framework-section-react",
    "docs:screenshot:react-tab:baseline": "node docs/scripts/screenshot-unified.mjs --baseline --components=framework-section-react",
    "docs:screenshot:remix-tab": "node docs/scripts/screenshot-unified.mjs --components=framework-section-remix",
    "docs:screenshot:remix-tab:baseline": "node docs/scripts/screenshot-unified.mjs --baseline --components=framework-section-remix",
    "docs:screenshot:framework-tabs": "node docs/scripts/screenshot-unified.mjs --components=framework-section-react,framework-section-remix",
    "docs:screenshot:framework-tabs:baseline": "node docs/scripts/screenshot-unified.mjs --baseline --components=framework-section-react,framework-section-remix",
    "docs:screenshot:cleanup": "node docs/scripts/screenshot-cleanup.mjs",
    "docs:screenshot:cleanup:dry-run": "node docs/scripts/screenshot-cleanup.mjs --dry-run",
    "docs:screenshot:cleanup:keep-latest": "node docs/scripts/screenshot-cleanup.mjs --keep-latest --keep=3",
    "docs:screenshot:cleanup:keep": "node docs/scripts/screenshot-cleanup.mjs --keep-latest",
    "docs:design-iterations:init": "cd docs && pnpm design-iterations:init",
    "docs:design-iterations": "node docs/scripts/design-iterations.mjs",
    "docs:design-iterations:count-5": "node docs/scripts/design-iterations.mjs --count=5",
    "docs:design-iterations:hero-features": "node docs/scripts/design-iterations.mjs --target=hero-section,features-section",
    "docs:design-iterations:frameworks": "node docs/scripts/design-iterations.mjs --target=framework-section-react,framework-section-remix",
    "docs:design-iterations:prompt": "node docs/scripts/design-iterations.mjs --prompt='Create a modern and bold design with enhanced contrast'",
    "docs:design-iterations:compare": "node docs/scripts/design-iterations.mjs --compare-with=react,redux,zustand"
  },
  "keywords": [
    "state",
    "reactive",
    "store",
    "json",
    "observable"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@remix-run/react": "^2.16.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.1",
    "@types/react": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "preact": "^10.26.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "terser": "^5.39.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2",
    "zod": "^3.24.3"
  },
  "peerDependencies": {
    "@remix-run/react": ">=1.0.0",
    "preact": ">=10.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "preact": {
      "optional": true
    },
    "@remix-run/react": {
      "optional": true
    }
  }
}
